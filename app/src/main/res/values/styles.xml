<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/Black</item>
       <!-- <item name="android:windowBackground">@color/appBgColor</item>-->
       <!-- <item name="otpViewStyle">@style/OtpWidget.OtpView</item>-->
    </style>

    <style name="astrologerDetailToolbar" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="DialogAnimationUptoDown">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>


    <style name="ThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splashAppNameStyle">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="signupTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="loginPageTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="loginPageMsgTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="loginErrorTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/errColor</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="loginButtonStyle">
        <item name="backgroundTint">@color/appBgColor</item>
        <item name="strokeColor">@color/Black</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="screenTitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="circleImageViewExpert" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="circleImageViewBlog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="MyEdittext">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/cr</item>
        <item name="android:lines">1</item>

    </style>



    <style name="MyTextview">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/cr</item>
        <item name="android:textSize">15dp</item>
        <item name="android:lines">1</item>

    </style>
    <style name="MyTextview1">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:fontFamily">@font/cr</item>
        <item name="android:lines">1</item>

    </style>

    <style name="MyButton">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/cr</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:lines">1</item>

    </style>


    <style name="homeListTitleTextStyle">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="homeViewAllTitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:text">@string/lbl_view_all</item>
        <item name="android:background">@drawable/viewall_bg</item>
    </style>


    <style name="smallRatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:text">@string/lbl_view_all</item>
        <item name="android:background">@drawable/viewall_bg</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/DatePickerTheme.ButtonBarNegativeButtonStyle
        </item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/DatePickerTheme.ButtonBarPositiveButtonStyle
        </item>
    </style>

    <style name="DatePickerTheme.ButtonBarPositiveButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/viewAllBtn</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo"></style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="agentProfileParamTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primaryTextColorDark</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="agentProfileValParamTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="agentProfileDividertStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:background">@color/ordevidercolor</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>
    

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
