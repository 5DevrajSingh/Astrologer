<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/multicolor"
    android:layout_height="match_parent">

    <RelativeLayout
        android:elevation="5dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:onClick="Backd"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back"
            android:layout_width="@dimen/dp25"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_height="25dp"/>
        <TextView
            android:text="Detail form"
            android:textSize="18dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/mainLL"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:layout_marginBottom="@dimen/dimen_60dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:elevation="3dp"
            >

            <LinearLayout
                android:id="@+id/layout_Signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_back">

                    <TextView
                        style="@style/MyTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/txt_ownername"
                        style="@style/MyEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Enter your name"
                        android:imeOptions="actionNext"
                        android:inputType="text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_back">

                    <TextView
                        style="@style/MyTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="@color/colorBlack" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/genderspiner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_back">

                    <TextView
                        style="@style/MyTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/txt_email"
                        style="@style/MyEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="spyder@email.com"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_back">

                    <TextView
                        style="@style/MyTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/txt_number"
                        style="@style/MyEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="your phone number"
                        android:maxLength="10"
                        android:imeOptions="actionNext"
                        android:inputType="phone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_back">

                    <TextView
                        style="@style/MyTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/txt_dob"
                        style="@style/MyEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:text="XX/XX/XXXX" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_back">

                    <TextView
                        style="@style/MyTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time of Birth"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/txt_time_dob"
                        style="@style/MyEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:text="hh.mm" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_back">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4">

                        <TextView
                            style="@style/MyTextview1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack" />

                        <EditText
                            android:id="@+id/city"
                            style="@style/MyEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="City"
                            android:layout_marginLeft="5dp"
                            android:imeOptions="actionNext"
                            android:inputType="text" />


                    </LinearLayout>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/MyTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:textColor="@color/colorBlack" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/statespinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_back">

                    <TextView
                        style="@style/MyTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:textColor="@color/colorBlack" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/countryspinnser"
                        android:layout_marginRight="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_back">

                    <TextView
                        style="@style/MyTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Place of Birth"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/placeofbirth"
                        style="@style/MyEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Enter Place of birth"
                        android:imeOptions="actionNext" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_back">

                    <TextView
                        style="@style/MyTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marital Status"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/martialstatus"
                        style="@style/MyEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint=""
                        android:visibility="gone"
                        android:imeOptions="actionNext" />
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/maritalstatusd"
                        android:layout_marginRight="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_back">

                    <TextView
                        style="@style/MyTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Occupation"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/occupation"
                        style="@style/MyEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Enter Occupation"
                        android:imeOptions="actionNext" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_back">

                    <TextView
                        style="@style/MyTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Topic of concern"
                        android:textColor="@color/colorBlack" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/concern"
                        android:layout_marginRight="30dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/acceptlayout"
        android:visibility="gone"
        android:background="#fff">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/splash"
            android:elevation="5dp"
            android:layout_marginTop="100dp"
            android:padding="5dp"
            android:id="@+id/ivProfile"
            android:layout_gravity="center"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:id="@+id/name"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <Button
                android:id="@+id/btncancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:background="@color/accent"
                android:text="Cancel"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/btnaccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_margin="@dimen/dimen_10dp"
                android:background="@color/accent"
                android:text="Accept"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/convo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEA00"
            android:elevation="5dp"
            android:gravity="center"
            android:text="Start Your Converstation"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />
    </LinearLayout>



<!--    /////////////////////PopUp//////////////////////-->



    <LinearLayout
        android:id="@+id/timer_popUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:clickable="false"
        android:background="@drawable/round_bg">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_weight="1.3">


                    <!--                    <ImageView-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        android:src="@drawable/ribon"-->
                    <!--                        android:rotation="145"-->
                    <!--                        android:layout_gravity="center"/>-->


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/splash"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:typeface="serif"
                        android:text="All Set"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1.3"
                    android:orientation="horizontal">


                    <!--                    <ImageView-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        android:src="@drawable/ribon"-->
                    <!--                        android:rotation="-145"-->
                    <!--                        android:layout_gravity="center"/>-->


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/round_bg"
                android:backgroundTint="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1.6">



                    <LinearLayout
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right|center_vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/popUpAstroProfile"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="2.445dp"
                            android:src="@drawable/profile_image_placeholder" />

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You will receive call from"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:typeface="serif"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/popUpAstroName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pt. Shivam Pandey"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="within"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/blue"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/count_down"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/stateConnected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay connected"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:typeface="serif"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="@drawable/sharpe_border"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"/>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1.5">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Charge will start when yours call received by astrologer. If your call not received due to some technical issue . Please try again."
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/popUpOk"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_buttons"
                        android:backgroundTint="@color/black"
                        android:text="OK"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"/>


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


</RelativeLayout>