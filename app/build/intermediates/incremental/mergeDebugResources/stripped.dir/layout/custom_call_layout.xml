<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_5dp">

        <TextView
            android:id="@+id/text_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="#4574795379458"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/text_order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:text="Rajput"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:text="Status:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_12sp" />

                    <TextView
                        android:id="@+id/text_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5dp"
                        android:text="Complete"
                        android:textColor="@color/Green"
                        android:textSize="@dimen/dimen_12sp" />


                </LinearLayout>


                <TextView
                    android:id="@+id/text_order_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:text="23 Jun 20, 09:45 AM"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_order_callrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:text="Call rate: Rs 19/min"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen_12sp" />

                <TextView
                    android:id="@+id/text_order_callduration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:text="Duration: 4 minutes"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen_12sp" />

                <TextView
                    android:id="@+id/text_order_deduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:text="Deduction: Rs 34"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_order_user"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:src="@drawable/images_user" />

                <TextView
                    android:id="@+id/text_order_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:text="Rs. 23/min"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_order_call"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@drawable/call_btn_border"
                    android:textColor="@color/red"
                    android:text="Call"
                    android:textAllCaps="false"
                    android:textSize="@dimen/dimen_12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/btn_order_invoice"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:background="@drawable/call_btn_black_border"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:text="Invoice"
                        android:textAllCaps="false"
                        android:textSize="@dimen/dimen_12sp" />


                    <ImageView
                        android:id="@+id/image_order_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:src="@drawable/ic_delete_icon" />


                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>