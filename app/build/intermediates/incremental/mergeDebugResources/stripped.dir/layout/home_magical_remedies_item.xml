<?xml version="1.0" encoding="utf-8"?>
                                                       

    

                                           
                                          

                 
                                
                                                                                      
           

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item"
        android:layout_width="90dp"
        android:layout_height="wrap_content" android:tag="layout/home_magical_remedies_item_0" xmlns:tools="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvRemedies"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgRemedies"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:tag="binding_1"                    />

        </androidx.cardview.widget.CardView>

        <com.ksbm_astroexpert.view.NormalTextView
            android:id="@+id/txtCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:tag="binding_2"              
            android:textColor="@color/black"
            android:textSize="12sp"
            android:ellipsize="end"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvRemedies"
            tools:text="@string/app_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         